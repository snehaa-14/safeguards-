<?xml version="1.0" encoding="utf-8"?>
<!-- res/layout/activity_siren_alert.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/background_page1">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/safeguardback"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo1"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safeguard"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"/>


        <ImageView
            android:id="@+id/buttonLogout"
            android:layout_width="53dp"
            android:layout_height="43dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ll2"
            />

    </RelativeLayout>

    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:src="@drawable/sirenl"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="50dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStartSiren"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Start"
        android:onClick="startSiren"
        android:gravity="center"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="100dp"
        android:backgroundTint="@color/safeguardback"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnStopSiren"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Stop"
        android:layout_below="@id/btnStartSiren"
        android:layout_marginTop="16dp"
        android:onClick="stopSiren"
        android:layout_marginLeft="100dp"
        android:backgroundTint="@color/safeguardback"
        />
</RelativeLayout>
