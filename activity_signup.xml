<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_page1"
    android:orientation="vertical"
    tools:context=".Signup_Activity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"/>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="750dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/back_grey"
        android:orientation="vertical"
        android:padding="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="463dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Name"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextPersonName1"
            android:layout_width="476dp"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/edittext_back"
            android:ems="10"
            android:hint="Type Here"
            android:padding="15dp"
            android:text=""
            android:textColor="#8e8e8e"
            android:textSize="15dp"
            android:inputType="textNoSuggestions"
            />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="463dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text="Email"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextPersonEmail"
            android:layout_width="476dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_back"
            android:ems="20"
            android:hint="@string/edit_name"
            android:inputType="text"
            android:padding="15dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="476dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Password"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editTextPersonpassword"
            android:layout_width="476dp"
            android:layout_height="50dp"
            android:background="@drawable/edittext_back"
            android:ems="20"
            android:inputType="textPassword"
            android:padding="10dp"
            android:text="@string/password"
            android:textColor="#8e8e8e"
            android:textColorHint="#8e8e8e"
            android:textSize="15dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/textView_contact1"
            android:layout_width="476dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Contact 1"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editText_contact1"
            android:layout_width="476dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_back"
            android:ems="20"
            android:inputType="phone"
            android:padding="10dp"
            android:text=""
            android:textColor="#8e8e8e"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/textView_contact2"
            android:layout_width="476dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:text="Contact 2"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/editText_contact2"
            android:layout_width="476dp"
            android:layout_height="45dp"
            android:background="@drawable/edittext_back"
            android:ems="20"
            android:inputType="phone"
            android:padding="10dp"
            android:text=""
            android:textColor="#8e8e8e"
            android:textSize="15dp"
            android:layout_marginTop="5dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signup_btn"
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:background="#20716A"
            android:padding="10dp"
            android:text="SignUp"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>


    </LinearLayout>

</LinearLayout>
