<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_page1">

    <!-- Top Bar -->
    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/safeguardback"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo1"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safeguard"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/buttonsos"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_marginLeft="210dp"
            android:src="@drawable/l2"
            android:layout_marginTop="3dp"
            />

        <ImageView
            android:id="@+id/buttonLogout"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ll2"
            />

    </RelativeLayout>

    <!-- ScrollView for GridLayout content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/topBar"
        >

        <!-- GridLayout -->
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="4"
            android:alignmentMode="alignMargins"
            android:columnOrderPreserved="false"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <!-- Image 1 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/im1"
                    android:layout_width="match_parent"
                    android:layout_height="148dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/helplinel" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="HelpLine Number "
                    android:textAlignment="center"
                    android:layout_below="@id/im1"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"
                    />
            </RelativeLayout>

            <!-- Image 2 -->
            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp"
                >

                <ImageView
                    android:id="@+id/im2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/sirenl"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Siren Alert"
                    android:textAlignment="center"
                    android:layout_below="@id/im2"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/im3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/tipsl"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Safety Tips"
                    android:textAlignment="center"
                    android:layout_below="@id/im3"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_margin="8dp">

                <ImageView
                    android:id="@+id/im4"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:src="@drawable/aboutl"
                    android:scaleType="centerCrop"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About Us"
                    android:textAlignment="center"
                    android:layout_below="@id/im4"
                    android:layout_marginTop="8dp"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>






        </GridLayout>
    </ScrollView>

</RelativeLayout>
