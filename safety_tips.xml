<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp"
    android:fitsSystemWindows="true"
    tools:context=".SafeTips"
    android:background="@drawable/background_page1">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/safeguardback"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo1"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safeguard"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"/>


        <ImageView
            android:id="@+id/buttonLogout"
            android:layout_width="53dp"
            android:layout_height="43dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ll2"
            />

    </RelativeLayout>

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginTop="40dp">

        <TextView
            android:layout_width="340dp"
            android:layout_height="47dp"
            android:layout_weight="1"
            android:text="SAFETY TIPS"
            android:textColor="@color/black"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="24dp"
            android:background="@drawable/border_background"
            android:padding="5dp"
            android:layout_margin="10dp"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Safety Tips Section -->
    <!-- Safety Tips Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">

        <!-- Safety Tip 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/border_background">

            <ImageView
                android:id="@+id/i1"
                android:layout_margin="10dp"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/fs1"
                android:contentDescription="heyyy"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:onClick="playVideo1" /> <!-- Apply circular shape here -->

            <TextView
                android:id="@+id/t1"
                android:layout_marginLeft="20dp"
                android:layout_margin="10dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Prepare for the unexpected in everyday life"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:onClick="playVideo1"
                android:padding="5dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <!-- Safety Tip 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_background">

            <ImageView
                android:layout_width="50dp"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:src="@drawable/fs2"
                android:contentDescription="Logo 2"
                android:scaleType="centerCrop"
                android:onClick="playVideo2"/> <!-- Apply circular shape here -->

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Be creative with everyday items"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:onClick="playVideo2"
                android:padding="5dp"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <!-- Safety Tip 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_background">

            <ImageView
                android:layout_width="50dp"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:src="@drawable/fs3"
                android:contentDescription="Logo 3"
                android:scaleType="centerCrop"
                android:onClick="playVideo3"/> <!-- Apply circular shape here -->

            <TextView
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Stay alert when walking alone"
                android:textColor="@color/black"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:onClick="playVideo3"
                android:fontFamily="sans-serif"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_background">

            <ImageView
                android:layout_width="50dp"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:src="@drawable/fs4"
                android:contentDescription="Logo 3"
                android:scaleType="centerCrop"
                android:onClick="playVideo4"/> <!-- Apply circular shape here -->

            <TextView
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" Don't forgot essentials when leaving house "
                android:textColor="@color/black"
                android:textStyle="italic|bold"
                android:textSize="20dp"
                android:onClick="playVideo4"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:background="@drawable/border_background">

            <ImageView
                android:layout_width="50dp"
                android:layout_margin="10dp"
                android:layout_height="50dp"
                android:src="@drawable/fs5"
                android:contentDescription="Logo 3"
                android:scaleType="centerCrop"
                android:onClick="playVideo5"/> <!-- Apply circular shape here -->

            <TextView
                android:layout_width="0dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Carry extra money "
                android:textColor="@color/black"
                android:textStyle="italic|bold"
                android:textSize="20dp"
                android:onClick="playVideo5"
                android:fontFamily="sans-serif"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>