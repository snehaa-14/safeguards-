<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@drawable/background_page1"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/safeguardback"
        android:padding="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/logo1"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/textAppName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safeguard"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"/>


        <ImageView
            android:id="@+id/buttonLogout"
            android:layout_width="60dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ll2"
            />

    </RelativeLayout>

    <TextView
        android:id="@+id/text_about_us_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@drawable/about_us_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:text="Safe Guard"
        android:textColor="@android:color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/image_safeguard_logo"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/aboutl" />

    <TextView
        android:id="@+id/text_about_us_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_about_us_title"
        android:layout_marginTop="102dp"
        android:text="\u2022 Safe Guard is a cutting-edge safety app designed for rapid emergency response. Its unique activation method allows discreet triggering by a preset code word.\n\n\u2022 Upon activation, it swiftly sends the user's real-time location to three chosen contacts.\n\n\u2022 Leveraging geolocation services, it transmits precise coordinates to facilitate quick assessment and action.\n\n\u2022 Safe Guard also boasts a customizable contact list, ensuring critical notifications reach trusted individuals for immediate assistance or alerting authorities.\n\n\u2022 Key features include activation via code word, geolocation services, phone shaking activation and the SOS messages."
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:fontFamily="sans-serif"/>

    <TextView
        android:id="@+id/text_about_us_features"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_about_us_summary"
        android:layout_marginTop="16dp"
        android:text="Implementing Features :\n1. Activation Code Word\n2. Geolocation Services\n3. Phone Shaking Activation"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:fontFamily="sans-serif"/>

</RelativeLayout>